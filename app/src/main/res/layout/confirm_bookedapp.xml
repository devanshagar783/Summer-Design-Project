<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F2F2"
    android:backgroundTint="#0B0A0A"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/header_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#31D6D6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/confirm_booked_image"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:src="@drawable/surgeon_image" />

        <TextView
            android:id="@+id/confirm_booked_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/boogaloo"
            android:text="Name of doctor"
            android:textColor="#1C1A1A"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_1">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.086"
            app:srcCompat="@drawable/time" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo"
            android:text="Patient Name:-"
            android:textColor="#0C0C0C" />

        <TextView
            android:id="@+id/confirm_booked_patient_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/baloo"
            android:text="Patient Name:-"
            android:textColor="#090909" />

        <TextView
            android:id="@+id/text_navigate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="125dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#E11010"
            android:fontFamily="@font/baloo"
            android:text="Navigate"
            android:textColor="#050505"
            android:textSize="15sp"

            android:textStyle="italic" />

        <TextView
            android:id="@+id/confirm_booked_clinic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="125dp"
            android:layout_marginBottom="90dp"
            android:backgroundTint="#E11010"
            android:fontFamily="@font/baloo"
            android:text="Clinic"
            android:textColor="#050505"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/confirm_booked_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="#E11010"
            android:fontFamily="@font/baloo"
            android:text="Booked Time"
            android:textColor="#050505"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="140dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:srcCompat="@drawable/navigate" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="240dp"
            android:backgroundTint="#FFC107"
            android:fontFamily="@font/baloo"
            android:text="Booked Successfuly"
            android:textColor="#131313"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>