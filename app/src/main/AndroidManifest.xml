<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android = "http://schemas.android.com/apk/res/android"
    package = "com.sdp.remotehealthcareapp">
    
    <uses-permission android:name = "android.permission.INTERNET" />
    <uses-permission android:name = "android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name = "android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        android:allowBackup="true"
        android:hardwareAccelerated = "false"
        android:icon = "@mipmap/healtcare_icon"
        android:label = "@string/app_name"
        android:largeHeap = "true"
        android:roundIcon = "@mipmap/healtcare_icon_round"
        android:supportsRtl = "true"
        android:theme = "@style/AppTheme">
        <activity
            android:name = ".Activities.MyWebViewActivity"/>
        <activity
            android:name = ".Activities.ImagesActivity"
            android:label="Previous Prescriptions"/>
        <activity
            android:name = ".Activities.login"
            android:label="Login"/>
        <activity
            android:name = ".Activities.signup"
            android:label="Sign Up"/>
        <activity
            android:name = ".Activities.AttachmentReportActivity"
            android:label="Attachments and Report"/>
        <activity
            android:name = ".Activities.Splash"
            android:theme = "@style/AppTheme">
            <intent-filter>
                <action android:name = "android.intent.action.MAIN" />
    
                <category android:name = "android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name = ".Activities.JoyInterface"
            android:icon = "@mipmap/healtcare_icon"
            android:label = "Joy"
            android:roundIcon = "@mipmap/healtcare_icon_round">
        </activity>
        <activity
            android:name = ".Activities.Intro_Signin"
            android:label="Sign In"/>
        <activity
            android:name = ".Activities.Signin"
            android:label="Sign In"/>
        <activity
            android:name = ".Activities.MainActivity"
            android:label = "@string/app_name">
        </activity>
        <activity
            android:name = ".Activities.PhoneAuthActivity"
            android:label = "Phone Authentication">
        </activity>
    </application>

</manifest>