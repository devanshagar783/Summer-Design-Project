<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android = "http://schemas.android.com/apk/res/android"
    package = "com.sdp.remotehealthcareapp">
    
    <uses-permission android:name = "android.permission.INTERNET" />
    <uses-permission android:name = "android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name = "android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        android:fullBackupContent = "true"
        android:hardwareAccelerated = "false"
        android:icon = "@mipmap/healtcare_icon"
        android:label = "@string/app_name"
        android:largeHeap = "true"
        android:roundIcon = "@mipmap/healtcare_icon_round"
        android:supportsRtl = "true"
        android:theme = "@style/AppTheme">
        <activity android:name = ".Activities.MyWebViewActivity">
        </activity>
        <activity android:name = ".Activities.ImagesActivity">
        </activity>
        <activity android:name = ".Activities.login">
        </activity>
        <activity android:name = ".Activities.signup">
        </activity>
        <activity android:name = ".Activities.AttachmentReportActivity">
        </activity>
        <activity
            android:name = ".Activities.Splash"
            android:theme = "@style/AppTheme">
            <intent-filter>
                <action android:name = "android.intent.action.MAIN" />
    
                <category android:name = "android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name = ".Activities.JoyInterface"
            android:allowBackup = "true"
            android:icon = "@mipmap/healtcare_icon"
            android:label = "@string/app_name"
            android:roundIcon = "@mipmap/healtcare_icon_round"
            android:theme = "@style/AppTheme">
        </activity>
        <activity
            android:name = ".Activities.Intro_Signin"
            android:theme = "@style/AppTheme" />
        <activity android:name = ".Activities.Signin" />
        <activity
            android:name = ".Activities.MainActivity"
            android:label = "@string/app_name">
        </activity>
        <activity
            android:name = ".Activities.PhoneAuthActivity"
            android:label = "phone auth activity"
            android:theme = "@style/AppTheme">
        </activity>
    </application>

</manifest>